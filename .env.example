# AgentArmy Environment Configuration
# Copy this file to .env and fill in your values

# System Configuration
AGENT_ENV=development
LOG_LEVEL=INFO

# Database Configuration
DB_USER=agentadmin
DB_PASS=securepassword
DB_NAME=agent_army
DATABASE_URL=postgresql://agentadmin:securepassword@postgres:5432/agent_army

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-generate-with-openssl
AGENT_SIGNING_KEY=your-ed25519-private-key

# Agent Private Keys (Ed25519 format)
# Generate with: openssl genpkey -algorithm ed25519 -out private_key.pem
COMMANDER_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
MIGHAgEAMBMGByqGSM49AgEGCCqGSM49AwEHBG0wawIBAQQgZOZEuTH1NM3f5xM2
...
-----END PRIVATE KEY-----

SENTINEL_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
MIGHAgEAMBMGByqGSM49AgEGCCqGSM49AwEHBG0wawIBAQQgZOZEuTH1NM3f5xM2
...
-----END PRIVATE KEY-----

BUILDER_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
MIGHAgEAMBMGByqGSM49AgEGCCqGSM49AwEHBG0wawIBAQQgZOZEuTH1NM3f5xM2
...
-----END PRIVATE KEY-----

INSPECTOR_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
MIGHAgEAMBMGByqGSM49AgEGCCqGSM49AwEHBG0wawIBAQQgZOZEuTH1NM3f5xM2
...
-----END PRIVATE KEY-----

WATCHER_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
MIGHAgEAMBMGByqGSM49AgEGCCqGSM49AwEHBG0wawIBAQQgZOZEuTH1NM3f5xM2
...
-----END PRIVATE KEY-----

# Claude API Configuration
CLAUDE_API_KEY=sk-ant-your-anthropic-api-key-here

# GitHub Configuration
GITHUB_TOKEN=ghp_your-github-personal-access-token-here
GITHUB_REPO_OWNER=your-org
GITHUB_REPO_NAME=your-repo

# WhatsApp Configuration
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Google Calendar OAuth2 Configuration
# Create credentials at https://console.cloud.google.com/apis/credentials
# Enable the Google Calendar API in your project
AGENTARMY_GOOGLE_OAUTH_CLIENT_ID=YOUR_CLIENT_ID.apps.googleusercontent.com
AGENTARMY_GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-your-client-secret
AGENTARMY_GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/auth/google/callback
# Static token fallback (optional â€” OAuth2 is preferred)
# AGENTARMY_GOOGLE_CALENDAR_TOKEN=ya29.a0...

# Docker Registry Configuration
DOCKER_REGISTRY=docker.io
DOCKER_REGISTRY_USERNAME=your-docker-username
DOCKER_REGISTRY_PASSWORD=your-docker-password

# External Service URLs
WEBHOOK_URL=https://your-domain.com/webhooks

# Slack Configuration (Optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_ID=your-slack-app-id
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=alerts@example.com

# Ollama Configuration (Optional)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=mistral

# Sentry Configuration (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_WHATSAPP=true
ENABLE_SLACK=false
ENABLE_EMAIL=false
ENABLE_OLLAMA=false
ENABLE_SECURITY_SCANNING=true

# Development Configuration
DEBUG=false
TESTING=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
